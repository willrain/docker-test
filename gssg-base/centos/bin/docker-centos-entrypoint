#!/bin/sh
set -e

if [ -z $1 ]; then

    echo "#---------------------------------------------------------------------------"
    echo "# parameter is null"
    echo "# /usr/local/bin/running-check.sh "
    echo "#---------------------------------------------------------------------------"

    /usr/local/bin/running-check.sh

else

    echo "#---------------------------------------------------------------------------"
    echo "# parameter is $@"
    echo "#---------------------------------------------------------------------------"

    # first arg is `-f` or `--some-option`
    if [ "${1#-}" != "$1" ]; then

        echo "#---------------------------------------------------------------------------"
        echo "# parameter is option"
        echo "# /usr/local/bin/running-check.sh $@"
        echo "#---------------------------------------------------------------------------"

        /usr/local/bin/running-check.sh "$@"

    else

        echo "#---------------------------------------------------------------------------"
        echo "# parameter is command"
        echo "# exec $@"
        echo "#---------------------------------------------------------------------------"

        exec "$@"

    fi
fi






